{
  "name": "designkit-icons",
  "version": "1.0.0",
  "description": "A Sass module for icons used in RightScale apps.",
  "homepage": "https://github.com/rightscale-design/designkit-icons#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rightscale-design/designkit-icons.git"
  },
  "author": {
    "name": "Jason Melgoza"
  },
  "license": "MIT",
  "keywords": [
    "sass",
    "css",
    "styles",
    "svg"
  ],
  "bugs": {
    "url": "https://github.com/rightscale-design/designkit-icons/issues"
  },
  "files": [
    "package.json",
    "LICENSE",
    "README.md",
    "CHANGELOG.md",
    "dist/designkit-icons.css",
    "dist/designkit-icons.min.css",
    "src/_designkit-icons.scss",
    "src/index.scss",
    "svg/"
  ],
  "scss": "src/_designkit-icons.scss",
  "main": "dist/designkit-icons.css",
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "devDependencies": {
    "autoprefixer": "^6.4.0",
    "csso": "^3.1.1",
    "designkit-colors": "^1.1.0",
    "lodash": "^4.17.5",
    "node-sass": "^4.5.3",
    "nodemon": "^1.10.0",
    "npm-run-all": "^2.3.0",
    "serve": "^6.0.6"
  },
  "scripts": {
    "start": "npm run build:serve",
    "serve": "serve docs/ -o",
    "watch": "nodemon -e scss -x 'npm run build:all'",
    "build:scss": "node ./scripts/scss.js",
    "build:prefix": "node ./scripts/postcss.js",
    "build:docs": "node ./scripts/docs.js",
    "build:readme": "node ./scripts/readme.js",
    "build:all": "npm run build:scss && npm run build:prefix && npm run build:docs",
    "build:serve": "run-p watch serve"
  }
}
